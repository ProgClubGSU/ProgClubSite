---
interface Props {
  title?: string;
  variant?: 'default' | 'gradient' | 'bordered';
  class?: string;
}

const { title, variant = 'default', class: className = '' } = Astro.props;

const variants = {
  default: 'bg-white border border-gray-200 shadow-sm',
  gradient: 'bg-gradient-to-br from-blue-50 to-indigo-50 border border-blue-200 shadow-md',
  bordered: 'bg-white border-2 border-blue-500 shadow-lg',
};
---

<div class={`rounded-lg p-6 my-4 ${variants[variant]} ${className}`}>
  {title && (
    <h3 class="text-lg font-semibold text-gray-900 mb-3">{title}</h3>
  )}
  <div class="text-gray-700">
    <slot />
  </div>
</div>
