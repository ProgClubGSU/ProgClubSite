---
import { QUOTE, SITE_TITLE } from "@/consts";
---

<div class="hero-bg hidden md:block h-[60vh] hero-bg-animate absolute top-0"></div>
<section
  class="h-[75vh] !z-[20] relative w-full flex items-center justify-center px-8 overflow-hidden"
  id="hero"
>
  <!-- Wavy Grid Lines with Fade Effect -->
  <div class="wavy-grid">
    <div class="grid-wave">
      <!-- Static Square Grid -->
      <svg class="grid-overlay" viewBox="0 0 1000 1000" preserveAspectRatio="xMidYMid slice">
        <defs>
          <pattern id="squareGrid" x="0" y="0" width="50" height="50" patternUnits="userSpaceOnUse">
            <!-- Horizontal lines -->
            <line x1="0" y1="0" x2="50" y2="0" stroke="rgba(255,255,255,0.4)" stroke-width="1"/>
            <line x1="0" y1="50" x2="50" y2="50" stroke="rgba(255,255,255,0.4)" stroke-width="1"/>
            
            <!-- Vertical lines -->
            <line x1="0" y1="0" x2="0" y2="50" stroke="rgba(255,255,255,0.4)" stroke-width="1"/>
            <line x1="50" y1="0" x2="50" y2="50" stroke="rgba(255,255,255,0.4)" stroke-width="1"/>
          </pattern>
          
          <!-- Gradient mask for fading effect -->
          <linearGradient id="fadeGradient" x1="0%" y1="0%" x2="0%" y2="100%">
            <stop offset="0%" style="stop-color:white;stop-opacity:1" />
            <stop offset="70%" style="stop-color:white;stop-opacity:1" />
            <stop offset="85%" style="stop-color:white;stop-opacity:0.6" />
            <stop offset="95%" style="stop-color:white;stop-opacity:0.2" />
            <stop offset="100%" style="stop-color:white;stop-opacity:0" />
          </linearGradient>
        </defs>
        <rect width="100%" height="100%" fill="url(#squareGrid)" mask="url(#gridFadeMask)"/>
        <mask id="gridFadeMask">
          <rect width="100%" height="100%" fill="url(#fadeGradient)"/>
        </mask>
      </svg>
    </div>
    
    <!-- Additional fade overlay at bottom -->
    <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-black via-black/50 to-transparent pointer-events-none"></div>
  </div>
  
  <!-- ASCII Art Background Layer -->
  <div class="absolute inset-0 flex items-center justify-center pointer-events-none z-5">
    <img 
      src="/reiascii.png" 
      alt="ASCII Art Background" 
      class="max-w-2xl max-h-2xl object-contain opacity-10 grayscale select-none"
      style="filter: brightness(0) invert(1); mix-blend-mode: overlay;"
    />
    <!-- Subtle radial fade to make it even more subtle -->
    <div class="absolute inset-0 bg-gradient-radial from-transparent via-black/20 to-black/40"></div>
  </div>
  
  
  <!-- Top Left Corner - Barcode and progsu text -->
