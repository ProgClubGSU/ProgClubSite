---
// Import animations CSS so Astro processes it
import "@/styles/animations.css";
---

<!-- This component handles loading of non-critical CSS after page load -->
<script>
  // Defer non-critical animations until after initial render
  const loadNonCriticalStyles = () => {
    // Add class to enable animations after page loads
    document.body.classList.add('animations-ready');
    
    // Ensure smooth scrolling is enabled
    document.documentElement.style.scrollBehavior = 'smooth';
  };

  // Load after page is fully loaded
  if (document.readyState === 'complete') {
    loadNonCriticalStyles();
  } else {
    window.addEventListener('load', loadNonCriticalStyles);
  }
</script>

<style>
  /* Hide animations until page is ready */
  body:not(.animations-ready) .cursor-glow,
  body:not(.animations-ready) .binary-trail,
  body:not(.animations-ready) .hero-bg {
    opacity: 0 !important;
    animation: none !important;
  }
  
  /* Enable animations once ready */
  body.animations-ready .cursor-glow,
  body.animations-ready .binary-trail,
  body.animations-ready .hero-bg {
    opacity: initial;
    animation: initial;
  }
</style> 