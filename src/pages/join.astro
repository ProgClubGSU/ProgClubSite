---
import Layout from "@/layouts/Layout.astro";
import { SITE_TITLE, DISCORD_LINK, GOOGLE_FORM_URL } from "@/consts";
---

<Layout title={`Join ${SITE_TITLE}`} description="Join Georgia State University's Programming Club - Build projects, learn coding, and connect with developers">
  <div class="max-w-6xl mx-auto px-4 py-8">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-6xl md:text-7xl font-bold mb-6 glow-pulse-title">
        Join <span class="text-purple-400">{SITE_TITLE}</span>
      </h1>
    </div>

    <!-- CTA Section -->
    <div class="text-center mb-16">
      <div class="cta-card">
        <h2 class="text-4xl font-bold mb-8 text-white">
          Ready to start your journey?
        </h2>

        <!-- Action Buttons -->
        <div class="flex flex-col items-center gap-4">
          <button onclick={`window.open('${GOOGLE_FORM_URL}', '_blank')`} class="join-btn">
            <span class="btn-text">Join Now</span>
            <span class="btn-glow"></span>
            <span class="btn-icon">→</span>
          </button>
          
          <div class="text-center">
            <p class="text-sm text-white/60 mb-3">also don't forget to</p>
            <button onclick={`window.open('${DISCORD_LINK}', '_blank')`} class="discord-btn-secondary">
              <span class="btn-text">Join Discord Community</span>
              <span class="btn-icon">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
                </svg>
              </span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Section -->
    <div class="stats-section mb-16">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="stat-item">
          <div class="stat-number">200+</div>
          <div class="stat-label">Active Members</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">40+</div>
          <div class="stat-label">Events This Year</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">3</div>
          <div class="stat-label">Company Events</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">$500+</div>
          <div class="stat-label">In Prizes</div>
        </div>
      </div>
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      <!-- Hackathons & Competitions -->
      <div class="feature-card">
        <div class="feature-icon">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
          </svg>
        </div>
        <h3 class="feature-title">Hackathons & Competitions</h3>
        <p class="feature-description">Compete in coding challenges, win prizes, and showcase your skills in real-world projects.</p>
      </div>

      <!-- Industry Connections -->
      <div class="feature-card">
        <div class="feature-icon">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
        <h3 class="feature-title">Industry Connections</h3>
        <p class="feature-description">Company tours, guest speakers, and networking events with tech professionals and alumni.</p>
      </div>

      <!-- Skill Development -->
      <div class="feature-card">
        <div class="feature-icon">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="feature-title">Skill Development</h3>
        <p class="feature-description">Workshops on LeetCode, resume building, interview prep, and modern development tools.</p>
      </div>

      <!-- Project Building -->
      <div class="feature-card">
        <div class="feature-icon">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
          </svg>
        </div>
        <h3 class="feature-title">Project Building</h3>
        <p class="feature-description">Collaborate on real projects, build your portfolio, and learn from experienced developers.</p>
      </div>

      <!-- Community -->
      <div class="feature-card">
        <div class="feature-icon">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
          </svg>
        </div>
        <h3 class="feature-title">Community</h3>
        <p class="feature-description">Connect with like-minded developers, share knowledge, and grow your professional network.</p>
      </div>

      <!-- Career Support -->
      <div class="feature-card">
        <div class="feature-icon">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="feature-title">Career Support</h3>
        <p class="feature-description">Internship guidance, job referrals, and mentorship from successful industry professionals.</p>
      </div>
    </div>

    <!-- Footer CTA -->
    <div class="text-center mt-12">
      <button onclick="window.location.href='/'" class="btn-secondary">
        ← Back to Home
      </button>
    </div>
  </div>
</Layout>

<style>
  .glow-pulse-title {
    animation: titlePulse 2.5s infinite;
  }
  
  @keyframes titlePulse {
    0%, 100% {
      text-shadow:
        0 0 6px rgba(59, 130, 246, 0.18),
        0 0 12px rgba(255, 255, 255, 0.10),
        0 0 24px rgba(59, 130, 246, 0.08);
      color: #fff;
    }
    50% {
      text-shadow:
        0 0 12px rgba(59, 130, 246, 0.22),
        0 0 24px rgba(255, 255, 255, 0.13),
        0 0 36px rgba(59, 130, 246, 0.10);
      color: #f4faff;
    }
  }

  /* Feature Cards */
  .feature-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 1.5rem;
    text-align: center;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .feature-card:hover {
    transform: translateY(-3px);
    border-color: rgba(147, 51, 234, 0.3);
    box-shadow: 0 8px 25px rgba(147, 51, 234, 0.2);
  }

  .feature-icon {
    margin-bottom: 0.75rem;
    color: white;
    filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.4));
  }

  .feature-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.75rem;
  }

  .feature-description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
  }

  /* Stats Section */
  .stats-section {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1.5rem;
    padding: 2rem 1.5rem;
    backdrop-filter: blur(10px);
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 900;
    color: #9333ea;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 20px rgba(147, 51, 234, 0.5);
  }

  .stat-label {
    color: rgba(255, 255, 255, 0.8);
    font-weight: 600;
    font-size: 1rem;
  }

  /* CTA Card */
  .cta-card {
    background: linear-gradient(135deg, rgba(147, 51, 234, 0.1) 0%, rgba(59, 130, 246, 0.1) 100%);
    border: 2px solid rgba(147, 51, 234, 0.3);
    border-radius: 2rem;
    padding: 3rem 2rem;
    backdrop-filter: blur(20px);
    box-shadow: 0 20px 60px rgba(147, 51, 234, 0.2);
  }

  /* Join Button */
  .join-btn {
    position: relative;
    background: linear-gradient(135deg, #7c3aed 0%, #a855f7 50%, #c084fc 100%);
    border: none;
    border-radius: 1rem;
    color: white;
    padding: 1.25rem 2.5rem;
    font-weight: 700;
    font-size: 1.2rem;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.3s ease;
    transform: translateZ(0);
    box-shadow: 0 8px 32px rgba(147, 51, 234, 0.4);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .join-btn:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 15px 40px rgba(147, 51, 234, 0.6);
  }

  .join-btn:active {
    transform: translateY(-1px) scale(1.01);
  }

  .join-btn .btn-text {
    position: relative;
    z-index: 2;
    font-weight: 700;
  }

  .join-btn .btn-icon {
    position: relative;
    z-index: 2;
    font-size: 1.4rem;
    font-weight: 700;
    transition: transform 0.3s ease;
  }

  .join-btn:hover .btn-icon {
    transform: translateX(5px);
  }

  .join-btn .btn-glow {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.6s ease;
    z-index: 1;
  }

  .join-btn:hover .btn-glow {
    left: 100%;
  }

  /* Discord Button Secondary */
  .discord-btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 0.75rem;
    color: white;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .discord-btn-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(88, 101, 242, 0.4);
    transform: translateY(-1px);
  }

  .discord-btn-secondary .btn-text {
    font-weight: 600;
  }

  .discord-btn-secondary .btn-icon {
    transition: transform 0.3s ease;
  }

  .discord-btn-secondary:hover .btn-icon {
    transform: translateX(2px);
  }

  /* Secondary Button */
  .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 0.75rem;
    color: white;
    padding: 1rem 2rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1.1rem;
  }
  
  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .feature-card {
      padding: 1.25rem;
    }
    
    .feature-icon {
      margin-bottom: 0.5rem;
    }
    
    .feature-title {
      font-size: 1.1rem;
      margin-bottom: 0.5rem;
    }
    
    .feature-description {
      font-size: 0.9rem;
    }
    
    .stat-number {
      font-size: 2.5rem;
    }
    
    .cta-card {
      padding: 2rem 1.5rem;
    }
  }
</style> 