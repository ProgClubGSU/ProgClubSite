---
import Layout from "@/layouts/Layout.astro";
import { EMAIL_LINK, DISCORD_LINK } from "@/consts";
---

<Layout title="Contact & Partnerships - ProgSU">
  <div id="top"></div>

  <!-- Hero Section -->
  <section class="pt-24 pb-8 px-8 bg-black relative overflow-hidden">
    <!-- Grid background -->
    <div class="absolute inset-0">
      <div class="w-full h-full opacity-3" style="background-image: linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <div class="max-w-5xl mx-auto relative z-10">
      <!-- Back Navigation -->
      <a
        href="/"
        class="inline-flex items-center text-white/60 hover:text-white font-mono text-sm transition-colors duration-200 group mb-8"
      >
        <span class="mr-2 text-green-400 group-hover:text-green-300">$</span>
        <span class="group-hover:text-green-100">cd ..</span>
        <span class="ml-2 text-white/30 group-hover:text-white/50">▊</span>
      </a>

      <!-- Page Header -->
      <div class="mb-8 flex items-end justify-between">
        <div>
          <h1 class="text-4xl md:text-6xl font-bold text-white mb-2 tracking-tight" style="font-family: 'Helvetica Neue', sans-serif;">
            let's talk
          </h1>
          <div class="text-xs text-white/40 uppercase tracking-widest font-mono">
            // partnerships & collaborations
          </div>
        </div>

        <div class="text-right">
          <div class="text-2xl font-bold text-white font-mono">
            [P]
          </div>
          <div class="text-xs text-white/40 uppercase tracking-widest">
            contact
          </div>
        </div>
      </div>

      <!-- Intro Text -->
      <div class="max-w-3xl">
        <h2 class="text-2xl md:text-4xl font-light text-white leading-tight mb-4" style="font-family: 'Helvetica Neue', sans-serif;">
          interested in partnering with<br/>
          <span class="font-bold">atlanta's top tech community?</span>
        </h2>
        <p class="text-lg text-white/60 leading-relaxed font-light mb-6" style="font-family: 'Helvetica Neue', sans-serif;">
          we're always looking to connect with companies, organizations, and sponsors who want to support the next generation of builders.
        </p>

        <!-- Terminal Command Style with Buttons -->
        <div class="border border-white/10 bg-white/[0.02] p-4 max-w-2xl">
          <div class="font-mono text-white/60 space-y-1 mb-4">
            <div class="text-green-400 text-sm">$ contact partnerships</div>
            <div class="text-white/40 text-sm">choose your preferred method...</div>
          </div>

          <!-- Contact Buttons -->
          <div class="flex flex-col sm:flex-row gap-3">
            <!-- Calendly External Link Button -->
            <a
              href="https://calendly.com/progsu"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center px-6 py-3 bg-purple-600 hover:bg-purple-500 text-white font-medium transition-all duration-300 group border-2 border-purple-500 hover:border-purple-400 shadow-lg hover:shadow-purple-500/50 flex-1"
              style="font-family: 'Helvetica Neue', sans-serif;"
            >
              <svg class="w-5 h-5 mr-2 text-purple-100 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span class="group-hover:text-purple-50 transition-colors duration-300">schedule meeting</span>
            </a>

            <!-- Email Button -->
            <a
              href={EMAIL_LINK}
              class="inline-flex items-center justify-center px-6 py-3 bg-white/5 hover:bg-white/10 border-2 border-white/20 hover:border-white/40 text-white font-medium transition-all duration-300 group flex-1"
              style="font-family: 'Helvetica Neue', sans-serif;"
            >
              <svg class="w-5 h-5 mr-2 text-green-400 group-hover:text-green-300 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span class="group-hover:text-white/90 transition-colors duration-300">send email</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Partnership Benefits Section -->
  <section class="py-6 px-8 bg-black relative overflow-hidden">
    <!-- Grid background continues -->
    <div class="absolute inset-0">
      <div class="w-full h-full opacity-3" style="background-image: linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <div class="max-w-5xl mx-auto relative z-10">
      <!-- Benefits Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-3">

        <!-- Benefit 1 -->
        <div class="border border-white/10 bg-white/[0.02] p-6">
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <div class="w-12 h-12 bg-white/5 rounded-full flex items-center justify-center">
                <div class="w-3 h-3 bg-white rounded-full"></div>
              </div>
              <div class="text-xs font-mono text-white/40">[01]</div>
            </div>
            <h3 class="text-xl font-medium text-white" style="font-family: 'Helvetica Neue', sans-serif;">
              reach 500+ students
            </h3>
            <p class="text-sm text-white/60 leading-relaxed" style="font-family: 'Helvetica Neue', sans-serif;">
              direct access to georgia state's most engaged cs and tech students
            </p>
          </div>
        </div>

        <!-- Benefit 2 -->
        <div class="border border-white/10 bg-white/[0.02] p-6">
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <div class="w-12 h-12 bg-white/5 rounded-full flex items-center justify-center">
                <div class="w-3 h-3 bg-white rounded-full"></div>
              </div>
              <div class="text-xs font-mono text-white/40">[02]</div>
            </div>
            <h3 class="text-xl font-medium text-white" style="font-family: 'Helvetica Neue', sans-serif;">
              co-host events
            </h3>
            <p class="text-sm text-white/60 leading-relaxed" style="font-family: 'Helvetica Neue', sans-serif;">
              sponsor workshops, hackathons, and technical events throughout the year
            </p>
          </div>
        </div>

        <!-- Benefit 3 -->
        <div class="border border-white/10 bg-white/[0.02] p-6">
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <div class="w-12 h-12 bg-white/5 rounded-full flex items-center justify-center">
                <div class="w-3 h-3 bg-white rounded-full"></div>
              </div>
              <div class="text-xs font-mono text-white/40">[03]</div>
            </div>
            <h3 class="text-xl font-medium text-white" style="font-family: 'Helvetica Neue', sans-serif;">
              talent pipeline
            </h3>
            <p class="text-sm text-white/60 leading-relaxed" style="font-family: 'Helvetica Neue', sans-serif;">
              early access to top talent for internships and full-time positions
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Minimal Footer -->
  <footer class="border-t border-white/10 py-6 px-8 bg-black">
    <div class="absolute inset-0">
      <div class="w-full h-full opacity-3" style="background-image: linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <div class="max-w-5xl mx-auto flex justify-between items-center relative z-10">
      <div class="font-mono text-white/40 text-sm" style="font-family: 'Helvetica Neue', sans-serif;">
        © 2025 progsu at gsu
      </div>
      <a href="/" class="font-mono text-white/40 text-sm hover:text-white/60 transition-colors">back to home</a>
    </div>
  </footer>
</Layout>
