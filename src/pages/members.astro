// Check if role is president-level
function isPresidentRole(role: string): boolean {
  return role.toLowerCase().includes('president');
}

// Check if this is the founding president (Jenny Liu gets extra special treatment!)
function isFoundingPresident(role: string): boolean {
  return role.toLowerCase().includes('founding president');
}

// Get role priority for sorting
function getRolePriority(role: string): number {
  const priorities = {
    "President": 1,
    "Founding President": 1,
    "Vice President": 2,
    "Former President": 2,
    "VP": 2,
    "Former VP": 2,
    "Secretary": 3,
    "Former Secretary": 3,
    "Treasurer": 4,
    "Event Lead": 5,
    "Events Coordinator": 5,
    "Workshop Lead": 6,
    "Tech Chair": 7,
    "Founding VP": 8
  };
  return priorities[role] || 99;
}

// Sort members by role priority
Object.keys(membersByYear).forEach(year => {
  membersByYear[year].sort((a, b) => getRolePriority(a.role) - getRolePriority(b.role));
});
