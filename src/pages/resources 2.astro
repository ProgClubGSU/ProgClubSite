];

// Essential resources organized by category
const resources = {
  "getting-interview": [
    {
      title: "Resume Guide",
      description: "Step-by-step guide to writing a technical resume that gets interviews",
      url: "#", // Replace with your actual link
      difficulty: "beginner",
      impact: "high"
    },
    {
      title: "LinkedIn Optimization",
      description: "Optimize your LinkedIn profile for tech recruiting and networking",
      url: "#", // Replace with your actual link
      difficulty: "beginner",
      impact: "high"
