                    {category.title} Resources
                  </h3>
                </div>

                <div class="space-y-3">
                  {resources[category.id].map((resource, index) => {
                    const isExternal = resource.url && (resource.url.startsWith('http') || resource.url.startsWith('https'));
                    const Component = resource.url && resource.url !== '#' ? 'a' : 'div';
                    const linkProps = resource.url && resource.url !== '#' ? {
                      href: resource.url,
                      target: isExternal ? '_blank' : undefined,
                      rel: isExternal ? 'noopener noreferrer' : undefined
                    } : {};

                    return (
                      <Component
                        {...linkProps}
                        class={`border border-white/10 bg-white/[0.02] p-5 ${resource.url && resource.url !== '#' ? 'hover:bg-white/[0.05] hover:border-white/20 transition-all duration-200 cursor-pointer group' : 'opacity-60'}`}
                      >
                        <div class="flex items-start space-x-4">
                          <div class="flex-shrink-0 text-white/40 font-mono text-sm font-bold w-6">
                            {(index + 1).toString().padStart(2, '0')}.
                          </div>

                          <div class="flex-1">
                            <div class="flex items-start justify-between mb-3">
                              <h4 class={`text-white font-semibold text-lg ${resource.url && resource.url !== '#' ? 'group-hover:text-green-300' : ''}`} style="font-family: 'Helvetica Neue', sans-serif;">
                                {resource.title}
                              </h4>

                              <div class="flex items-center space-x-2 ml-4">
                                <!-- Impact Badge -->
                                <div class={`text-xs font-mono px-2 py-1 rounded-sm whitespace-nowrap ${
                                  resource.impact === 'high' ? 'bg-green-500/20 text-green-400 border border-green-500/30' :
                                  resource.impact === 'multiplier' ? 'bg-yellow-500/20 text-yellow-400 border border-yellow-500/30' :
                                  'bg-red-500/20 text-red-400 border border-red-500/30'
                                }`}>
                                  {resource.impact}
                                </div>

                                <!-- Difficulty Badge -->
                                <div class={`text-xs font-mono px-2 py-1 rounded-sm whitespace-nowrap ${
                                  resource.difficulty === 'beginner' ? 'bg-green-900/30 text-green-300 border border-green-700/40' :
                                  'bg-yellow-900/30 text-yellow-300 border border-yellow-700/40'
                                }`}>
                                  {resource.difficulty}
                                </div>
                              </div>
                            </div>

                            <p class="text-white/70 mb-4 leading-relaxed" style="font-family: 'Helvetica Neue', sans-serif;">
                              {resource.description}
                            </p>

                            <div class="flex items-center justify-between">
                              {resource.url && resource.url !== '#' ? (
                                <div class="flex items-center text-white/40 group-hover:text-white/60 text-sm font-mono">
                                  <span class="mr-2">â†’</span>
                                  <span>read full guide</span>
                                </div>
                              ) : (
                                <div class="flex items-center text-white/30 text-sm font-mono">
                                  <span class="mr-2">âš </span>
                                  <span>coming soon - link needed</span>
                                </div>
                              )}

                              <div class="text-xs text-white/40 font-mono">
                                {category.id === 'getting-interview' && 'ðŸ“§ Professional Presence'}
                                {category.id === 'passing-interview' && 'ðŸ’» Technical Excellence'}
                              </div>
                            </div>
                          </div>
                        </div>
                      </Component>
                    );
                  })}
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Getting Started -->
        <div class="mb-16">
          <div class="border border-white/10 bg-white/[0.02] p-8">
