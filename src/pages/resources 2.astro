      {
        title: "Professional Presence",
        description: "Optimize your resume and LinkedIn for maximum impact",
        skills: ["Resume optimization", "LinkedIn networking", "Personal branding"],
        timeframe: "2-3 weeks",
        priority: "high-impact"
      },
      {
        title: "Strategic Networking",
        description: "Build relationships and get referrals to skip the resume pile",
        skills: ["Referral strategy", "Coffee chats", "Industry connections"],
        timeframe: "Ongoing",
