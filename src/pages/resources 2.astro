---

<Layout title={`Resources - ${SITE_TITLE}`}>
  <div class="min-h-screen bg-white">
    <!-- Content -->
    <div class="max-w-4xl mx-auto px-6 py-12">
        <!-- gitPAID Header -->
        <div class="mb-16">
