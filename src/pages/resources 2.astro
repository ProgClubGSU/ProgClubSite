---
import Layout from "@/layouts/Layout.astro";
import { DISCORD_LINK, SITE_TITLE } from "@/consts";

// gitPAID main categories
const categories = [
  {
    id: "getting-interview",
    title: "Getting the Interview",
    description: "Build your professional presence and get noticed by recruiters",
    icon: "ðŸ“§",
    color: "blue",
    steps: [
      {
        title: "Build Your Foundation",
        description: "Create projects and establish your technical credibility",
        skills: ["Programming fundamentals", "Git/GitHub", "Portfolio projects"],
        timeframe: "2-4 months",
        priority: "essential"
