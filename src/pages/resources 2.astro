          <div class="space-y-8">
            {categories.map((category, categoryIndex) => (
              <div class="border border-white/10 bg-white/[0.02] p-8">
                <div class="mb-8">
                  <div class="flex items-center space-x-4 mb-4">
                    <div class={`text-3xl`}>{category.icon}</div>
