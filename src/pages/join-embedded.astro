  }

  .success-message h3 {
    color: #22c55e;
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .success-message p {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .back-btn {
    background: linear-gradient(135deg, #7c3aed 0%, #a855f7 50%, #c084fc 100%);
    border: none;
    border-radius: 0.5rem;
    color: white;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .back-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(147, 51, 234, 0.4);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .google-form-container iframe {
      height: 600px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('join-form');
    const submitBtn = document.getElementById('submit-btn');
    const successMessage = document.getElementById('success-message');
    
    form.addEventListener('submit', function(e) {
      e.preventDefault(); // Prevent default form submission
      
      console.log('Form submitted!');
      
      // Show loading state
      submitBtn.disabled = true;
      submitBtn.querySelector('.btn-text').textContent = 'Submitting...';
      
      // Create a form with the correct field names and submit it
      const submitForm = document.createElement('form');
      submitForm.method = 'POST';
      submitForm.action = 'https://docs.google.com/forms/d/e/1FAIpQLSdIuhYbn3uP0_3k9bAF7bhtqMaQTkGQLD9-lmY6NKgrumGqXw/formResponse';
      submitForm.target = '_blank'; // Open in new tab
      submitForm.style.display = 'none';
      
      // Get form data and add to hidden form
      const formData = new FormData(form);
      
      console.log('Form data being submitted:');
      for (let [name, value] of formData.entries()) {
        if (value) {
          // Clean phone number if it's the phone field
          if (name === 'entry.2095083110') {
            // Remove all non-digit characters
            const cleanedValue = value.replace(/\D/g, '');
            
            // More flexible validation - allow 7-15 digits
            if (cleanedValue.length < 7 || cleanedValue.length > 15) {
              alert('Please enter a valid phone number (7-15 digits)');
              submitBtn.disabled = false;
              submitBtn.querySelector('.btn-text').textContent = 'Submit Application';
              return;
            }
            
            // Use the cleaned value for submission
            value = cleanedValue;
            console.log('Cleaned phone number:', value);
          }
          
          console.log(name + ': ' + value);
          const input = document.createElement('input');
          input.type = 'hidden';
          input.name = name;
          input.value = value;
          submitForm.appendChild(input);
        }
      }
      
      // Submit the form
      document.body.appendChild(submitForm);
      submitForm.submit();
      
      // Clean up and show success
      setTimeout(() => {
        document.body.removeChild(submitForm);
        console.log('Form submitted to Google Forms with correct field names');
      }, 1000);
      
      showSuccess();
      
      function showSuccess() {
        // Show success message
        setTimeout(() => {
          form.style.display = 'none';
          successMessage.style.display = 'block';
          console.log('Showing success message');
        }, 1500);
      }
    });
  });
</script> 