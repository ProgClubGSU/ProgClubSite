---
import FormattedDate from "@/components/Date.astro";
import Layout from "@/layouts/Layout.astro";
import ResourceButtons from "@/components/ResourceButtons.astro";

interface Props {
  title: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  resources?: Array<{
    type: string;
    label?: string;
    url?: string;
  }>;
}

const { title, pubDate, updatedDate, heroImage, resources } = Astro.props;
---

<Layout hideHomeButton={true}>
  <article class="pb-6 sm:pb-8 md:pb-10 grid place-items-center grid-cols-1">
    <div class="w-full flex justify-start max-w-4xl mx-auto px-4 mb-1">
      <slot name="breadcrumb" />
    </div>
    <div class="w-full grid place-items-center my-4 sm:my-6 md:my-10 px-4 overflow-x-hidden">
      {
        heroImage && (
          <img src={heroImage} alt="hero-image" class="rounded-xl sm:rounded-2xl w-full max-w-3xl" />
        )
      }
    </div>
    <div
      class="prose prose-sm sm:prose-base md:prose-lg !max-w-[95vw] sm:!max-w-[90vw] md:!max-w-4xl overflow-x-hidden !break-words brightness-110 prose-img:scale-90 prose-img:rounded-2xl prose-invert prose-hr:border-white prose-hr:bg-white px-4 md:px-0"
    >
      {/* Resources Section - Always shown to maintain consistent spacing */}
      <div class="mb-4 sm:mb-6 md:mb-8">
        <h3 class="text-lg sm:text-xl md:text-2xl font-bold text-white mb-3 sm:mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Resources
        </h3>
        {resources && resources.length > 0 ? (
          <ResourceButtons resources={resources} />
        ) : (
          <p class="text-sm text-white/60 italic">No resources available for this event.</p>
        )}
      </div>

      <slot />
    </div>
  </article>
</Layout>
